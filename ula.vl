module ula(in_a, in_b, op_select, out);
    input [15:0] in_a, in_b;     
    input [1:0]  op_select;   
    output reg [15:0] out; 

    always @(*) begin
        case (op_select)
            2'b00: out = in_a + in_b;    
            2'b01: out = in_a - in_b;    
            2'b10: out = ~(in_a & in_b); 
        endcase
    end
endmodule 